@page
@model HotelBookingClient.Pages.ContactModel
@{
    ViewData["Title"] = "Contact Us";
}

<div class="container mt-4">
    <div class="card shadow">
        <div class="card-body">
            <h2 class="mb-4 text-center">@ViewData["Title"]</h2>

            <p>If you have any questions, concerns, or need assistance, we’re here to help!</p>

            <h4>Contact Information</h4>
            <ul class="list-unstyled">
                <li><strong>Email:</strong> <a href="mailto:support@hotelbookingapp.com">support@hotelbookingapp.com</a></li>
                <li><strong>Phone:</strong> +1 (900) 133-9667</li>
                <li><strong>Address:</strong> 123 Ocean View, Colombo, Sri Lanka</li>
            </ul>

            <h4 class="mt-4">Working Hours</h4>
            <ul>
                <li>Monday – Friday: 8:00 AM – 6:00 PM</li>
                <li>Saturday: 9:00 AM – 2:00 PM</li>
                <li>Sunday: Closed</li>
            </ul>
        </div>
    </div>
</div>
