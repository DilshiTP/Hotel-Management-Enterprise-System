@page
@model HotelBookingClient.Pages.SpecialRequests.DeleteModel
@{
    ViewData["Title"] = "Delete Special Request";
}

<h2>Delete Special Request</h2>

<div class="alert alert-warning">
    Are you sure you want to delete this request?
</div>

<dl class="row">
    <dt class="col-sm-2">Guest Name</dt>
    <dd class="col-sm-10">@Model.SRequest.GuestName</dd>

    <dt class="col-sm-2">Contact Number</dt>
    <dd class="col-sm-10">@Model.SRequest.GuestTel</dd>

    <dt class="col-sm-2">Request Detail</dt>
    <dd class="col-sm-10">@Model.SRequest.RequestText</dd>

    <dt class="col-sm-2">Date</dt>
    <dd class="col-sm-10">@Model.SRequest.RequestedDate.ToShortDateString()</dd>
</dl>

<form method="post">
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-page="Index" class="btn btn-secondary">Cancel</a>
</form>
