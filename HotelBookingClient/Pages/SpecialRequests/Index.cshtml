@page
@model HotelBookingClient.Pages.SpecialRequests.IndexModel
@{
    ViewData["Title"] = "Special Requests";
}

<style>
    body {
        padding-bottom: 80px;
    }
</style>


<h1>Special Requests</h1>

<a class="btn btn-primary mb-3" asp-page="Create">Add New Request</a>

<table class="table table-striped table-bordered">
    <thead class="thead-dark">
        <tr>
            <th>Requested Details</th>
            <th>Guest Name</th>
            <th>Contact NO</th>
            <th>Requested Date</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var request in Model.SpecialRequests)
        {
            <tr>
                <td>@request.RequestText</td>
                <td>@request.GuestName</td>
                <td>@request.GuestTel</td>
                <td>@request.RequestedDate.ToShortDateString()</td>
                <td>
                    <a asp-page="Edit" asp-route-id="@request.Id" class="btn btn-sm btn-warning">Edit</a>
                    <a asp-page="Delete" asp-route-id="@request.Id" class="btn btn-sm btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
