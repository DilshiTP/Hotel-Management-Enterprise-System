@page "{id:int}"
@model HotelBookingClient.Pages.Bookings.EditModel
@{
    ViewData["Title"] = "Edit Booking";
}

<h1>Edit Booking</h1>

<form method="post">
    <input type="hidden" asp-for="Booking.Id" />
    <div class="form-group">
        <label>Guest Name</label>
        <input asp-for="Booking.GuestName" class="form-control" />
    </div>
    <div class="form-group">
        <label>Room Type</label>
        <select asp-for="Booking.RoomType" class="form-control">
            <option value="">-- Select Room Type --</option>
            <option value="Single Room">Single Room</option>
            <option value="Double Room">Double Room</option>
        </select>
    </div>
    <div class="form-group">
        <label>Check-In</label>
        <input asp-for="Booking.CheckIn" type="date" class="form-control" />
    </div>
    <div class="form-group">
        <label>Check-Out</label>
        <input asp-for="Booking.CheckOut" type="date" class="form-control" />
    </div>
    <div class="form-group">
        <label>Special Request</label>
        <input asp-for="Booking.SpecialRequest" class="form-control" />
    </div>

    <button class="btn btn-primary mt-2">Save Changes</button>
    <a asp-page="./Index" class="btn btn-secondary mt-2">Cancel</a>
</form>
