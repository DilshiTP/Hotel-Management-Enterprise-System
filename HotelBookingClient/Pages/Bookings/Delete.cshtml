@page "{id:int}"
@model HotelBookingClient.Pages.Bookings.DeleteModel
@{
    ViewData["Title"] = "Delete Booking";
}

<h1>Delete Booking</h1>

<div class="alert alert-warning">
    Are you sure you want to delete this booking?
</div>
<div>
    <strong>@Model.Booking.GuestName</strong><br />
    Check-In: @Model.Booking.CheckIn.ToShortDateString()<br />
    Check-Out: @Model.Booking.CheckOut.ToShortDateString()<br />
    Room Type: @Model.Booking.RoomType<br />
    Special Request: @Model.Booking.SpecialRequest
</div>

<form method="post">
    <input type="hidden" asp-for="Booking.Id" />
    <button type="submit" class="btn btn-danger mt-2">Yes, Delete</button>
    <a asp-page="./Index" class="btn btn-secondary mt-2">Cancel</a>
</form>
