@page
@model HotelBookingClient.Pages.Bookings.IndexModel
@{
    ViewData["Title"] = "Bookings";
}

<style>
    body {
        padding-bottom: 80px;
    }
</style>

<h1>Bookings</h1>

<a class="btn btn-primary mb-3" asp-page="Create">Add New Booking</a>

<table class="table table-striped table-bordered">
    <thead class="thead-dark">
        <tr>
            <th>Guest Name</th>
            <th>Check-In</th>
            <th>Check-Out</th>
            <th>Room Type</th>
            <th>Special Request</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
    @if (Model.Bookings.Any())
    {
        foreach (var booking in Model.Bookings)
        {
            <tr>
                <td>@booking.GuestName</td>
                <td>@booking.CheckIn.ToShortDateString()</td>
                <td>@booking.CheckOut.ToShortDateString()</td>
                <td>@booking.RoomType</td>
                <td>@booking.SpecialRequest</td>
                <td>
                    <a asp-page="Edit" asp-route-id="@booking.Id" class="btn btn-sm btn-warning">Edit</a>
                    <a asp-page="Delete" asp-route-id="@booking.Id" class="btn btn-sm btn-danger">Delete</a>
                </td>
            </tr>
        }
    }
    else
    {
        <tr>
            <td colspan="5" class="text-center">No bookings found.</td>
        </tr>
    }
    </tbody>
</table>
